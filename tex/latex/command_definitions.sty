% ==========================================

\newcommand{\distribNormal}[3]{\mathcal{N}\left(#1, #2^2\right) \quad \text{donde } x \sim \mathcal{N}\left(#1, #2^2\right)}
% 'distribNormal': Define la notación de una variable aleatoria x que sigue una distribución normal con media #1 y desviación estándar #2.
% Ejemplo: \distribNormal{\mu}{\sigma}

\newcommand{\pdfNormal}[2]{f(x) = \frac{1}{\sqrt{2\pi #2^2}} \exp\left(-\frac{(x - #1)^2}{2#2^2}\right)}
% 'pdfNormal': Define la función de densidad de probabilidad (PDF) de la distribución normal, con media #1 y desviación estándar #2.
% Ejemplo: \pdfNormal{\mu}{\sigma}
\newcommand{\pdfHalfNormal}{f(x) = \frac{2}{\sqrt{2\pi}} \exp\left(-\frac{x^2}{2}\right)}
% 'pdfNormal': Define la función de densidad de probabilidad (PDF) de la distribución normal, con media #1 y desviación estándar #2.
% Ejemplo: \pdfNormal{\mu}{\sigma}

\newcommand{\distribBinomial}[3]{\mathcal{B}(#1, #2) \quad \text{donde } X \sim \mathcal{B}(#1, #2)}
% 'distribBinomial': Define la notación de una variable aleatoria X que sigue una distribución binomial con n = #1 (número de pruebas) y p = #2 (probabilidad de éxito).
% Ejemplo: \distribBinomial{n}{p}

\newcommand{\pmfBinomial}[3]{P(X = #1) = \binom{#2}{#1} p^{#1} (1-p)^{#2 - #1}}
% 'pmfBinomial': Define la función de masa de probabilidad (PMF) de la distribución binomial, donde #1 es el número de éxitos, #2 es el número de pruebas y p es la probabilidad de éxito.
% Ejemplo: \pmfBinomial{k}{n}{p}

\newcommand{\distribPoisson}[1]{X \sim \mathcal{P}(\lambda) \quad \text{donde } X \text{ sigue una distribución de Poisson con } \lambda = #1}
% 'distribPoisson': Define la notación de una variable aleatoria X que sigue una distribución de Poisson con parámetro #1 (media de eventos por intervalo).
% Ejemplo: \distribPoisson{\lambda}

\newcommand{\pmfPoisson}[1]{P(X = k) = \frac{\lambda^k e^{-\lambda}}{k!} \quad (k = 0, 1, 2, \ldots)}
% 'pmfPoisson': Define la función de masa de probabilidad (PMF) de la distribución de Poisson, donde k es el número de eventos observados.
% Ejemplo: \pmfPoisson{k}

\newcommand{\distribExponencial}[1]{X \sim \mathcal{E}(\lambda) \quad \text{donde } \lambda = #1}
% 'distribExponencial': Define la notación de una variable aleatoria X que sigue una distribución exponencial con parámetro #1 (tasa de eventos).
% Ejemplo: \distribExponencial{\lambda}

\newcommand{\pdfExponencial}[1]{f(x) = \lambda e^{-\lambda x} \quad (x \geq 0)}
% 'pdfExponencial': Define la función de densidad de probabilidad (PDF) de la distribución exponencial, donde #1 es la tasa de eventos.
% Ejemplo: \pdfExponencial{\lambda}
