\newcommand{\boxi}[2][colorA]{
    \tcbox[% Opciones de tcolorbox
        colframe=#1, % Color del borde
        colback=#1  , % Color de fondo
        boxsep=1.5mm,
        boxrule=1.5pt, % Grosor del borde
        coltext=white,
        on line,
        fontupper=\ttfamily, % Aplica fuente monoespaciada
        arc=2pt, % Radio de las esquinas
        left=0pt, % Margen izquierdo
        right=0pt, % Margen derecho
        top=0pt, % Margen superior
        bottom=0pt % Margen inferior
    ]{#2}%
}


